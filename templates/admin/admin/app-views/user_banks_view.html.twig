<div ng-controller="UserBanksController">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label>{{ 'Iban'|trans }} <span class="text-danger">*</span></label>
                <input class="form-control" name="iban" ng-model="userBankRequest.iban">
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label>{{ 'Swift'|trans }} <span class="text-danger">*</span></label>
                <input class="form-control" name="swift" ng-model="userBankRequest.swift">
            </div>
        </div>
        <div class="col-3">
            <small class="text-danger float-right">* {{ 'required'|trans }}</small>
            <div class="form-group">
                <label>&#160; &#160;</label><br/>
                <button ng-click="makeUserBankRequest()" class="btn btn-success btn-outline btn-sm" type="button"><i class="fa fa-check"></i> {{ 'Save new bank account'|trans }}</button>
            </div>
        </div>
    </div>

    <hr />

    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ 'Iban'|trans }}</th>
            <th>{{ 'Swift'|trans }}</th>
            <th width="1" class="text-center">{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="bank in banks">
            <td>
                {{ '{{ bank.iban }}' }}
            </td>
            <td>
                {{ '{{ bank.swift }}' }}
            </td>
            <td class="text-center">

            </td>
        </tr>
        </tbody>
    </table>
</div>