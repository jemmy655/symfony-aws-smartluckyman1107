<form role="form" ng-controller="NewInternalTransferController">
    <div ng-if="walletId">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>{{ 'Amount'|trans }} <span class="text-danger">*</span></label>
                    <input type="number" step="0.01" placeholder="0" class="form-control" name="amount" ng-model="internalTransfer.amount">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>{{ 'Wallet ID'|trans }} <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="walletId" ng-model="internalTransfer.toWalletId">
                </div>
            </div>
        </div>
        <div>
            <button ng-click="makeInternalTransfer()" class="btn btn-success btn-outline btn-sm" type="button"><i class="fa fa-check"></i> {{ 'Transfer'|trans }}</button>
            <div>
                <small class="text-danger float-right">* {{ 'required'|trans }}</small>
            </div>
        </div>
    </div>
    <div ng-if="!walletId" class="text-center text-muted">
        {{ 'Internal transfer not allowed. No wallet selected.'|trans }}
    </div>
</form>