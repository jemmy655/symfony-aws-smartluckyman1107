{% extends 'email/base_email.html.twig' %}

{% block body %}
    {% set loginLink = param_frontend_base_url ~ 'zaloguj' %}

    <!-- Rozpoczęcie tablicy z treścią -->
    <table  border="0" cellpadding="0" cellspacing="0" style="width:100%; font-family: sans-serif; font-size: 14px; color: #10253b; padding:15px 40px 20px 40px;">
        <tr>
            <td style="color:#10253b; font-size:26px;font-weight:700; padding-bottom:15px;">Hello {{ user.getFullName() }},</td>
        </tr>
        <tr>
            <td style="font-size:14px;">
                Congratulations! You have successfully added your Bank account details on your swapcoin.today account. Start making your first transaction today!
            </td>
        </tr>
        <tr>
            <td style="padding:20px 0 10px 0; color:#de0e5c;">
                <table border="0" cellpadding="0" cellspacing="0" style="margin:30px 0; width:100%;">
                    <tr>
                        <td style="text-align:center">
                            <a href="{{ loginLink }}" style="color:#fff; background:#4f54e4; border-radius:5px; padding:12px 20px; text-decoration: none; font-weight:600;">Log in to your Account</a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- Zakończenie tablicy z treścią -->

    <table  border="0" cellpadding="0" cellspacing="0" style="width:100%; font-family: sans-serif; font-size: 14px; color: #10253b; padding:15px 40px 20px 40px;">
        <tr>
            <td style="font-size:14px;">
                Do you have additional questions or inquiries? We are happy to help you. Just send a message to support@swapcoin.today<br /><br />
                This is a system generated email. Please do not reply to this email.
            </td>
        </tr>
    </table>
{% endblock %}
