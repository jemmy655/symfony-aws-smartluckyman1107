{% extends 'email/base_email.html.twig' %}

{% block body %}
    <!-- Rozpoczęcie tablicy z treścią -->
    <table  border="0" cellpadding="0" cellspacing="0"
            style="width:100%; font-family: sans-serif; font-size: 14px; color: #10253b; padding:15px 40px 20px 40px;">
        <tr>
            <td style="color:#10253b; font-size:26px;font-weight:700; padding-bottom:15px;">Hello {{ internalTransfer.wallet.user.getFullName() }},</td>
        </tr>
        <tr>
            <td style="font-size:14px;">
                You have just created a new internal transfer order on the Swapcoin.today platform: To continue, please copy the code given below and use it in the system to confirm the withdrawal.<br />
                Use the code below or the code from the Google Authenticator to confirm the transfer.
            </td>
        </tr>
        <tr>
            <td style="padding:20px 0 20px 0;">
                <span style="background:#4f54e4; border-radius:5px; padding:5px 10px; color:#fff">New internal transfer order</span>
            </td>
        </tr>
        <tr>
            <td style="font-size:14px;">
                <table border="0" cellpadding="0" cellspacing="0" style="min-width:320px; margin-bottom:30px;">
                    <tr>
                        <td style="border-bottom:1px dashed #9da9bf;">Type of Transaction</td>
                        <td style="border-bottom:1px dashed #9da9bf; text-align:right; font-weight:600; padding:5px;">Internal Transfer</td>
                    </tr>
                    <tr>
                        <td style="border-bottom:1px dashed #9da9bf;">Transaction amount</td>
                        <td style="border-bottom:1px dashed #9da9bf; text-align:right; font-weight:600; padding:5px;">
                            {{ internalTransfer.toPrecision(internalTransfer.amount) }} {{ internalTransfer.wallet.currency.getShortName() }}
                        </td>
                    </tr>
                    {#<tr>#}
                        {#<td>Withdrawal Address</td>#}
                        {#<td style="text-align:right; font-weight:400; padding:5px; font-size:12px;">#}
                            {#{{ internalTransfer.address }}#}
                        {#</td>#}
                    {#</tr>#}
                </table>
            </td>
        </tr>
    </table>
    <!-- Zakończenie tablicy z treścią -->
    <!-- Rozpoczęcie tablicy z kodem -->
    <table border="0" cellpadding="0" cellspacing="0"
           style="width:100%; font-family: sans-serif; font-size: 14px; color: #10253b; background:#4f54e4; padding:0 40px">
        <tr>
            <td style="text-align:right;padding-right:15px; color:#fff; text-transform:uppercase;font-size:10px; font-weight:600;">
                YOUR ONE TIME CONFIRMATION CODE
            </td>
            <td style="padding:20px 0 20px 0;">
                <span style="font-size:18px;color:#4f54e4;background:#f0f3f8; border-radius:5px; padding:10px 20px;">
                    {{ internalTransfer.confirmationHash }}
                </span>
            </td>
        </tr>
    </table>
    <!-- Zakończenie tablicy z kodem -->
{% endblock %}
